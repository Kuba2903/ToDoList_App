<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TODOAPP.ViewModels"
             x:Class="TODOAPP.HomePage"
             Title="HomePage">
    <ContentPage.BindingContext>
        <vm:ToDoViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <CollectionView ItemsSource="{Binding TodoList}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="4"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding Description}" FontSize="12" />
                            <Label Text="{Binding Importance}" FontSize="12" TextColor="Red" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add New Task" Clicked="CreateBtn_Clicked" HorizontalOptions="Fill"/>

    </VerticalStackLayout>
</ContentPage>